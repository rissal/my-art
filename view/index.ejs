<%- include('partials/header'); -%>    
    
<!-- Header starts-->
<header class="pt-5 bg-primary">
  <div class="container-fluid ">
    <h1 class="font-weight-bold text-white">Hello there!<i class="text-danger fas fa-heart"></i></h1>
    <h3>Welcome to my website!</h3>
    <p class="mt-5 lead">On this website, i will showcase everything about me, especially my artwork!</p>
  </div>
</header>

<!-- Header ends -->
<!-- About me -->
<section class="about">
  <div class="container-fluid">
    <h2 class="mt-4 mb-5">About Me <i class="fas fa-question-circle"></i></h2>
    <div class="row text-center mt-2 mb-5">
      <div class="col-sm-6 col-md-3 left-b" id="left">
        <div class="card">
          <div class="card-body p-0">
            <img src="img/me.jpg" alt="me" width="100%">
          </div>
          <div class="card-footer py-1">
            <p class="lead">This is me!</p>
          </div>
        </div>
      </div>
      <div class="col-sm-6 col-md-9 mt-5 pt-5 right-b" id="right">
        <div class="row">
          <div class="col-4">
            <i class="fas fa-graduation-cap fa-3x text-danger"></i>
            <h5 class="my-3">Studies</h5>
            <p class="text-muted">I am a first year computer science student, and a web enthusiast!</p>
          </div>
          <div class="col-4">
            <i class="fab fa-adobe fa-3x text-primary"></i>
            <h5 class="my-3">Art</h5>
            <p class="text-muted">I am a self-taught Photoshop artist, and i do some cool stuff with it!</p>
          </div>
          <div class="col-4">
            <i class="fas fa-bicycle fa-3x text-warning"></i>
            <h5 class="my-3">Cycling</h5>
            <p class="text-muted">And as you might have noticed, cycling is one of my passions too!</p>
          </div>
        </div>
      </div>
      
    </div>
  </div>
</section>
<!-- My Art -->
<section class="bg-primary">
  <div class="container-fluid`">
    <h2 class="pt-4 mb-2 text-white">My Art <i class="fas fa-palette"></i></h2>
    <p class="lead text-white mb-5">This is a collection of my favorite artworks!</p>
    <div class="content p-5">
      <% images.map(function(image){ %>
        <% var href = "/images/"+image.id %>
        <a href=<%= href %> ><img src=<%= image.src %> alt=<%= image.src %> class="img-thumbnail img-shadow"/></a>
      <% }) %>
    </div>
  </div>
</section>
<!-- My Art ends-->
  <%- include('partials/footer'); -%>